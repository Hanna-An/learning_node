<div class="container p-4">
  <div class="mb-4">
      <a href="/" class="main">Главная</a>
      -> <a href="/categories">Категории</a>
      -> <a href="/categories/car_goods">{{{title}}}</a>
      <span> -> {{{product.title}}}</span>
  </div>

  <div>
      <h3>{{product.title}}</h3>
      <div>{{product.description}}</div>
      <img src="{{product.preview_img}}" class="furniture_img my-4">
  </div>
</div>

<aside>
    <span>Популярные товары:</span>
    {{#if popularProducts}}
        <ul>
            {{#each popularProducts}}
                <li class="news_title">
                    <a href="{{this.url}}">{{this.title}}</a>
                    <a href="{{this.url}}">{{this.preview_img}}</a>
                    <a href="{{this.url}}">{{this.price}}</a>
                </li>
            {{/each}}
        </ul>
    {{/if}}
</aside>
