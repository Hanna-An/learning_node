<div class="container p-4">

    <style>
        aside {
            background: #f0f0f0;
            padding: 10px;
            width: 200px;
            float: right;
        }
        </style>

      <div>
        <a href="/" class="main">Главная</a>
        <span class="main"> -> Новости</span>
    </div>

    <h1>{{{title}}}</h1>

    <aside>
        <span>Популярные новости:</span>
        {{#if popularNews}}
            <ul>
                {{#each popularNews}}
                    <li class="news_title">
                        <a href="{{this.url}}">{{this.title}}</a>
                    </li>
                {{/each}}
            </ul>
        {{/if}}
    </aside>

    {{#if news}}
        <ul>
            {{#each news}}
              {{> articles-card }}
            {{/each}}
        </ul>
    {{/if}}

    <nav class="mt-4">
      <ul class="pagination pagination-sm">
        {{#each pages}}
          <li class="page-item">
            <a class="page-link" href="/news?page={{this}}"> {{this}} </a>
          </li>
        {{/each}}
      </ul>
    </nav>
</div>


