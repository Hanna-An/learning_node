<div>
    <a href="/" class="main">Главная</a>
    -> <a href="/admin" class="main">Админ</a>
    <span class="main"> -> Статьи</span>
</div>

<h1>{{{title}}}</h1>

{{#if articles}}
    <ul>
        {{#each articles}}
            <li class="admin__articles_title">
                <a href="{{this.url}}">{{this.title}}</a>
                <form method="GET" action="/admin/articles/{{this.key}}/delete">
                    <button class="delete_button">Delete</button>
                </form>
            </li>
        {{/each}}
    </ul>
{{/if}}

<div>
    {{#each pages}}
        <a href="/admin?page={{this}}"> {{this}}</a>
    {{/each}}
</div>
