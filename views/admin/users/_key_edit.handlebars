<form action="/admin/users/profile/{id}" method="POST">
    <div>
        <label>title</label>
        <input type="text" value="{{users.name}}" name="title">
    </div>
    <div>
        <label>description</label>
        <textarea name="description" id="" cols="30" rows="10">{{users.surname}}</textarea>
    </div>
    <div>
        <label>image</label>
        <input type="text" value="{{users.image}}" name="image">
        <img src="{{users.image}}" width="350" height="350">
    </div>
    <button>save</button>
</form>