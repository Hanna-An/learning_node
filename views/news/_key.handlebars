<div class="container p-4">
  <div>
      <a href="/home" class="main">Главная</a>
      -> <a href="/news">Новости</a>
      <span> -> {{{news.title}}}</span>
  </div>

  <h1>{{{news.title}}}</h1>

  <div>
      <h3>{{news.title}}</h3>
      <div>{{news.description}}</div>
      <img src="{{news.image}}" class="furniture_img my-4">
  </div>

  <div class="pagination">
      <a href="/news/{{previous.key}}"><-{{previous.title}}</a>
      <a href="/news/{{next.key}}">{{next.title}}-></a>
  </div>
</div>
