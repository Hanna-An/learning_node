<div class="container p-4">
      <div>
        <a href="/" class="main">Главная</a>
        <span class="main"> -> Профайл</span>
    </div>

    <h1>{{{title}}}</h1>

    {{#if profile}}
        <ul>
            {{#each profile}}
                <li class="news_title">
                    <p><a href="{{this.url}}">{{this.name}}</a></p>
                </li>
                <p class="news_description">
                <p><a href="{{this.url}}">{{this.surname}}</a></p>
                </p>
            {{/each}}
        </ul>
    {{/if}}

    <ul>
        <form action="/profile" method="post" enctype="multipart/form-data">
            <p><input type="file" accept="image/*" name="avatar">
            <input type="submit" value="Отправить"></p>
        </form>
    {{#if image}}
        <img src="{{{image}}}" alt="">
    {{/if}}
    </ul>
</div>

